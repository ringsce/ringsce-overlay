{
    "name": "kaytec",
    "description": "A project that updates files from GitHub, generates PK3 files, and parses XML comments.",
    "authors": [
        "Pedro Dias Vicente"
    ],
    "dependencies": {
        "dxml": "~>0.4.0",
        "vibe-d": "~>0.9.4"
    },
    "sourcePaths": [
        "."
    ],
    "targetName": "kaytec",
    "sourceFiles": [
        "main.d",
        "vm.d",
        "updater.d",
        "pk3_manager.d",
        "xml_parser.d",
        "threading.d",
        "HTMLParser.d",
        "CSSParser.d",
        "HTMLParser.d",
        "EACCES.d"
    ],
    "targetPath": "bin",
    "targetType": "executable",
    "architectures": [
        "x86_64",  // macOS Intel
        "aarch64", // macOS ARM
        "x86_64",  // Linux x86_64
        "aarch64"  // Linux ARM64
    ],
    "dflags-ldc": ["-link-defaultlib-shared=false"],
    "lflags-ldc": ["-flto=thin"]
}
